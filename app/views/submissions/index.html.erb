<h1>Submissions</h1>

<ul class="list-group list-group-horizontal">
  <%- @units.each do |unit| %>
    <%= link_to unit.name, submissions_path(active_unit_id: unit.id), class: "list-group-item list-group-item-action" %>
  <% end %>
</ul>

<%- exercises = @units.find_by_id( @active_unit_id ).try(:exercises) %>
<%- exercises ||= [] %>

<%- exercises.each do |exercise| %>
  <%- if exercise.submissions.present? %>
  <table class="table">

    <thead class="thead-dark">
      <tr>
        <th scope="col"> Email </th>
        <th scope="col"> Exercise </th>
        <th scope="col"> Points </th>
        <th scope="col"> Grade </th>
        <th scope="col"> Graded Points </th>

        <th scope="col"> File </th>
      </tr>
    </thead>
    <tbody>

      <% exercise.submissions.each do |sub| %>
        <tr>
          <td><%= sub.user.email %></td>
          <td><%= sub.exercise.name %></td>
          <td><%= sub.exercise.points %></td>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to "0%", submission_path(sub.id, percentage:0), class: "btn btn-secondary", method: :put %>
              <%= link_to "50%", submission_path(sub.id, percentage:50), class: "btn btn-secondary", method: :put %>
              <%= link_to "80%", submission_path(sub.id, percentage:80), class: "btn btn-secondary", method: :put %>
              <%= link_to "100%", submission_path(sub.id, percentage:100), class: "btn btn-secondary", method: :put %>
            </div>
          </td>
          <td><%= sub.graded_points %></td>
          <td><%= link_to sub.file.filename.to_s, submission_path(sub.id), target: "_black", class: "btn btn-small btn-outline-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<% end %>
