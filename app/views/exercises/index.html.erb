<%# Nav Bar %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="#">Programming Club</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="https://repl.it/@LoganRice1/Java-Project" target="_blank">Sandbox</a>
      </li>
    </ul>

    <% if user_signed_in? %>
      <li>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary") %>        
      </li>
    <% else %>
      <li>
        <%= form_for(:user, :url => session_path(:user), html: { class: "form-inline mt-2 mt-md-0"} ) do |f| %>
          <%= f.text_field :email, placeholder: "email", class: "form-control mr-sm-2" %>
          <%= f.password_field :password, placeholder: "password", class: "form-control mr-sm-2"%>
          <%= f.submit 'Sign in', class: "btn btn-outline-success my-2 my-sm-0" %>
        <% end %> 
      </li>
    <% end %>
  </div>
</nav>

<%# Main Content %>
<div class="container">
  <h1>Exercises</h1>
    <%- @units.each do |unit| %>

      <table class="table table-sm">
        <thead class="bg-secondary">
          <tr class="exercise-header">
            <th scope="col" colspan="2">
              <%= unit.name %>
            </th>
          </tr>
        </thead>
        <tbody>
        <%- unit.exercises.each do |exercise| %>
            <tr>
              <td>
                <a href=<%= exercise.link.blank? ? "#" : exercise.link %> class="exercise">
                  <%= exercise.name %>
                </a>
              </td>
              <td class="text-right">

                <%- submission = @submissions.where(exercise_id: exercise.id, user_id: current_user.id).first %>
                <%- if submission.blank? %>
                  <%= form_for(:exercises, :url => exercises_path(:exercise), html: { class: "form-inline submission-form"} ) do |f| %>
                    <div class="form-group">
                      <%= f.file_field :file, class: "form-control-file" %>
                      <%= f.hidden_field :exercise_id, value: exercise.id %>
                    </div>
                    <%= f.submit 'Submit', class: "btn btn-small btn-outline-secondary text-right" %>
                  <% end %> 

                <%- else %>
                    <%= link_to submission.file.filename.to_s, rails_blob_path(submission.file, disposition: "attachment"), class: "btn btn-small btn-outline-primary" %>
                    <%= link_to "Delete", submission_path(@submissions.where(exercise_id: exercise.id, user_id: current_user.id).first), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn btn-small btn-outline-danger" %>
                <% end %>
              </td>
            </tr>
        <% end %>
        </tbody>
      </table> 
      <%- #list group %>
    <% end %>
  
  
</div>
